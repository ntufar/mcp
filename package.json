{
  "name": "mcp-file-browser-server",
  "version": "1.0.0",
  "description": "A secure, high-performance Model Context Protocol (MCP) server that enables Large Language Models to safely browse and interact with local file systems.",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/index.js",
    "dev": "ts-node src/server/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:security": "jest tests/security/",
    "test:performance": "jest tests/performance/",
    "test:contract": "jest tests/contract/",
    "test:llm": "jest tests/llm/",
    "test:llm:claude": "jest tests/llm/test-claude-integration.ts",
    "test:llm:gpt4": "jest tests/llm/test-gpt4-integration.ts",
    "test:llm:gemini": "jest tests/llm/test-gemini-integration.ts",
    "test:llm:qwen": "jest tests/llm/test-qwen-integration.ts",
    "example:complete": "ts-node examples/llm-integration/complete-example.ts",
    "example:test": "node examples/llm-integration/test-integration.js",
    "example:claude": "echo 'See examples/llm-integration/claude-desktop.md for Claude Desktop setup'",
    "example:gpt4": "echo 'See examples/llm-integration/openai-gpt.md for GPT-4 setup'",
    "example:ollama": "echo 'See examples/llm-integration/ollama-local.md for Ollama setup'",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "file-browser",
    "llm",
    "ai",
    "security",
    "typescript"
  ],
  "author": "Nicolai Tufar <https://github.com/ntufar>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^3.5.3",
    "crypto": "^1.0.1",
    "fs-extra": "^11.2.0",
    "joi": "^17.12.1",
    "mime-types": "^2.1.35",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/mime-types": "^2.1.4",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ntufar/mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ntufar/mcp/issues"
  },
  "homepage": "https://github.com/ntufar/mcp#readme"
}
